{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build development container",
            "type": "shell",
            "command": "sudo docker build -t dast1986/slough-dev-dc-rust:dev .",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run development container",
            "type": "shell",
            "command": "sudo docker run -it dast1986/slough-dev-dc-rust:dev",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "problemMatcher": []
        }
    ]
}